# ============================================
# CONTROL DE LOTERÍAS - CONFIGURACIÓN
# ============================================
# COPIAR ESTE ARCHIVO A .env Y COMPLETAR LOS VALORES

# Aplicación
APP_NAME=Control de Loterías
APP_VERSION=2.0.0
NODE_ENV=production
PORT=3000

# Base de datos MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=control_loterias

# JWT - Autenticación
# IMPORTANTE: Generar un secreto seguro único para producción
# Podés usar: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CAMBIAR_ESTE_SECRETO_POR_UNO_GENERADO_ALEATORIAMENTE
JWT_EXPIRES_IN=24h
